<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lila"
    tools:context=".Activity.MenuActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buttonHirekMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickHirekMenu"
            android:text="@string/hirek"
            android:textColor="@color/vilagoskek"
            android:textColorHighlight="@color/vilagoskek"
            android:textColorLink="@color/vilagoskek"
            app:backgroundTint="@color/bordo"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/buttonTabellaMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickTabellaMenu"
            android:text="@string/tabella"
            android:textColor="@color/vilagoskek"
            android:textColorHighlight="@color/vilagoskek"
            app:backgroundTint="@color/bordo"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buttonCsapatomMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickCsapatMenu"
            android:text="Csapatok"
            android:textColor="@color/vilagoskek"
            android:textColorLink="@color/vilagoskek"
            app:backgroundTint="@color/bordo"
            app:cornerRadius="0dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>